@model HomeVm
<main>
    <!-- hero slider section start -->
    <section class="hero-slider">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="hero-slider-active slick-arrow-style slick-arrow-style_hero slick-dot-style">
                        <!-- single slider item start -->
                        @foreach(var slider in Model.Sliders)
                        {
                            <div class="hero-single-slide">
                                <div class="hero-slider-item bg-img"
                                     data-bg="assets/img/slider/@slider.Image">
                                    <div class="hero-slider-content slide-1">
                                        <h5 class="slide-subtitle">@slider.TopPart</h5>
                                        <h2 class="slide-title">@slider.Title</h2>
                                        <p class="slide-desc">
                                           @slider.Description
                                        </p>
                                        <a href="@slider.ButtonLink" class="btn btn-hero">@slider.ButtonText</a>
                                    </div>
                                </div>
                            </div>
                        }
                        <!-- single slider item end -->
                        <!-- single slider item start -->
                      
                        <!-- single slider item end -->
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- hero slider section end -->
    <!-- service features start -->
    <section class="service-policy-area">
        <div class="container">
            <div class="row">
                <!-- single policy item start -->
                @foreach(var service in Model.Services)
                {
                    <div class="col-lg-4">
                        <div class="service-policy-item mt-30 bg-1">
                            <div class="policy-icon">
                                <img src="~/assets/img/icon/@service.ImageName" alt="policy icon" />
                            </div>
                            <div class="policy-content">
                                <h5 class="policy-title">@service.Title</h5>
                                <p class="policy-desc">@service.Description</p>
                            </div>
                        </div>
                    </div>
                }
                <!-- single policy item start -->
                <!-- single policy item start -->
      
                <!-- single policy item start -->
            </div>
        </div>
    </section>
    <!-- service features end -->
    <!-- our product area start -->
    <section class="our-product section-padding">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section-title text-center">
                        <h2 class="title">Our Product</h2>
                        <p class="sub-title">
                            Lorem ipsum dolor sit amet consectetur adipisicing
                        </p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="product-carousel-4 mbn-50 slick-row-15 slick-arrow-style">
                        <!-- product single item start -->
                        @foreach(var product in Model.Products)
                        {
                            <div class="product-item mb-50">
                                <div class="product-thumb">
                                    <a asp-action="Detail" asp-controller="Product"  asp-route-id="@product.Id">
                                        <img src="~/assets/img/product/@product.MainImage" alt="" />
                                    </a>
                                </div>
                                <div class="product-content">
                                    <h5 class="product-name">
                                        <a asp-action="Detail" asp-controller="Product"  asp-route-id="@product.Id">@product.Name</a>
                                    </h5>
                                    <div class="price-box">
                                        @if (product.DiscountPercentege > 0)
                                        {
                                            <span class="price-regular">$@((product.CostPrice - ((product.CostPrice * product.DiscountPercentege) / 100)).ToString("0.00"))</span>
                                            <span class="price-old"><del>$@product.CostPrice.ToString("0.00")</del></span>
                                        }
                                        else
                                        {
                                            <span class="price-regular">$@product.CostPrice</span>
                                        }

                                    </div>
                                    <div class="product-action-link">
                                        <a href="#" data-toggle="tooltip" title="Wishlist">
                                            <i class="ion-android-favorite-outline"></i>
                                        </a>
                                        <a href="#" data-toggle="tooltip" title="Add To Cart">
                                            <i class="ion-bag"></i>
                                        </a>
                                        <a href="#" data-toggle="modal" data-target="#quick_view">
                                            <span data-toggle="tooltip" title="Quick View">
                                                <i class="ion-ios-eye-outline"></i>
                                            </span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                        <!-- product single item start -->
                        <!-- product single item start -->
                      
                        <!-- product single item start -->
                        <!-- product single item start -->
                        
                        <!-- product single item start -->
                        <!-- product single item start -->
                       
                        <!-- product single item start -->
                        <!-- product single item start -->
                      
                        <!-- product single item start -->
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- our product area end -->
    <!-- banner statistic area start -->
    <div class="banner-statistics">
        <div class="container">
            <div class="row no-gutters mtn-30">
                <div class="col-md-6">
                    <div class="img-container mt-30">
                        <a asp-action ="Detail" asp-controller="Product">
                            <img src="~/assets/img/banner/banner-1.jpg"
                                 alt="banner-image" />
                        </a>
                        <div class="banner-text">
                            <h5 class="banner-subtitle">sports shoes</h5>
                            <h3 class="banner-title">20% Off<br />For Sports men</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="img-container mt-30">
                        <a asp-action="Detail" asp-controller="Product">
                            <img src="~/assets/img/banner/banner-2.jpg"
                                 alt="banner-image" />
                        </a>
                        <div class="banner-text">
                            <h5 class="banner-subtitle">sports shoes</h5>
                            <h3 class="banner-title">20% Off<br />For Sports men</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- banner statistic area end -->
    <!-- new products area start -->
    <section class="top-seller-area section-padding">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section-title text-center">
                        <h2 class="title">New Products</h2>
                        <p class="sub-title">
                            Lorem ipsum dolor sit amet consectetur adipisicing
                        </p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-4 col-lg-5 col-md-5">
                    <div class="product-banner">
                        <a href="#">
                            <img src="~/assets/img/banner/banner-3.jpg"
                                 alt="product banner" />
                        </a>
                    </div>
                </div>
                <div class="col-xl-8 col-lg-7 col-md-7">
                    <div class="top-seller-carousel slick-row-15 mtn-30">
                        <!-- product item start -->
                        @foreach(var newprod in Model.NewProducts)
                        {
                            <div class="slide-item">
                                <div class="pro-item-small mt-30">
                                    <div class="product-thumb">
                                        <a asp-action="Detail" asp-controller="Product"  asp-route-id="@newprod.Id">
                                            <img src="~/assets/img/product/@newprod.MainImage" alt="" />
                                        </a>
                                    </div>
                                    <div class="pro-small-content">
                                        <h6 class="product-name">
                                            <a asp-action="Detail" asp-controller="Product" asp-route-id="@newprod.Id">@newprod.Name</a>
                                        </h6>
                                        <div class="price-box">
                                            @if (newprod.DiscountPercentege > 0)
                                            {
                                                <span class="price-regular">$@((newprod.CostPrice - ((newprod.CostPrice * newprod.DiscountPercentege) / 100)).ToString("0.00"))</span>
                                                <span class="price-old"><del>$@newprod.CostPrice.ToString("0.00")</del></span>
                                            }
                                            else
                                            {
                                                <span class="price-regular">$@newprod.CostPrice</span>
                                            }
                                        </div>
                                        <div class="ratings">
                                            <span><i class="ion-android-star"></i></span>
                                            <span><i class="ion-android-star"></i></span>
                                            <span><i class="ion-android-star"></i></span>
                                            <span><i class="ion-android-star"></i></span>
                                            <span><i class="ion-android-star"></i></span>
                                        </div>
                                        <div class="product-link-2">
                                            <a href="#" data-toggle="tooltip" title="Wishlist">
                                                <i class="ion-android-favorite-outline"></i>
                                            </a>
                                            <a href="#" data-toggle="tooltip" title="Add To Cart">
                                                <i class="ion-bag"></i>
                                            </a>
                                            <a href="#"
                                               data-toggle="modal"
                                               data-target="#quick_view">
                                                <span data-toggle="tooltip" title="Quick View">
                                                    <i class="ion-ios-eye-outline"></i>
                                                </span>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        <!-- product item start -->
                      
                        <!-- product item start -->
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- new products area end -->
    <!-- latest blog area start -->
    <section class="latest-blog-area">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section-title text-center">
                        <h2 class="title">our blog</h2>
                        <p class="sub-title">
                            Lorem ipsum dolor sit amet consectetur adipisicing
                        </p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="blog-carousel-active slick-row-15">
                        <!-- blog single item start -->
                        @foreach(var blog in Model.Blogs)
                        {
                            <div class="blog-post-item">
                                <div class="blog-thumb">
                                    <a asp-action="Detail" asp-controller="Blog" asp-route-id="@blog.Id">
                                        <img src="~/assets/img/blog/@blog.Image" alt="blog thumb" />
                                    </a>
                                </div>
                                <div class="blog-content">
                                    <h5 class="blog-title">
                                        <a asp-action="Detail" asp-controller="Blog" asp-route-id="@blog.Id">
                                           @blog.Title
                                        </a>
                                    </h5>
                                    <ul class="blog-meta">
                                        <li><span>By: </span>@blog.WriteBy,</li>
                                        <li><span>On: </span>@blog.WriteOn.ToString("dd.MM.yyyy")</li>
                                    </ul>
                                    <a asp-action="Detail" asp-controller="Blog" asp-route-id="@blog.Id" class="read-more">@blog.ButtonText</a>
                                </div>
                            </div>
                        }
                        <!-- blog single item start -->
                        <!-- blog single item start -->
                     
                        <!-- blog single item start -->
                        <!-- blog single item start -->
                      
                        <!-- blog single item start -->
                        <!-- blog single item start -->
                     
                        <!-- blog single item start -->
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- latest blog area end -->
    <!-- brand area start -->
    <div class="brand-area section-padding">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="brand-active-carousel">
                        @foreach(var brand in Model.Brands)
                        {
                            <div class="brand-item">
                                <a href="#">
                                    <img src="~/assets/img/brand/@brand.Image" alt="brand image" />
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- brand area end -->
</main>