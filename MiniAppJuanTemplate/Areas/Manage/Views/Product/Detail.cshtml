@model Product
<div class="container px-4">
    <div class="row gx-5">
        <div class="col">
            <div class="p-3 border bg-light">Name: @Model.Name</div>
            <div class="p-3 border bg-light">Description: @Model.Description</div>
            <div class="p-3 border bg-light">CreatedDate: @Model.CreatedDate</div>
            <div class="p-3 border bg-light">CostPrice: @Model.CostPrice</div>
            <div class="p-3 border bg-light">Category: @Model.Category.Name</div>
            <div class="p-3 border bg-light">Tags: @(String.Join(" , ", Model.ProductTags.Select(pt => pt.Tag.Name)))</div>
            <div class="p-3 border bg-light">Tags: @(String.Join(" , ", Model.ProductSizes.Select(ps => ps.Size.Value)))</div>
            <div>
                <img src="~/assets/img/products/@Model.MainImage" width="100" height="100" />
            </div>
        </div>
        <div class="col">
            <a class="btn btn-outline-primary" asp-action="index">Go back</a>
        </div>
    </div>
</div>
