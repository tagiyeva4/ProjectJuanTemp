@model Category
<div class="container px-4">
    <div class="row gx-5">
        <div class="col">
            <div class="p-3 border bg-light">Name: @Html.Raw(Model.Name)</div>
            <div class="p-3 border bg-light">BooksCount: @Model.Products.Count</div>
        </div>
        <div class="col">
            <a class="btn btn-outline-primary" asp-action="index">Go back</a>
        </div>
    </div>
</div>

